import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        int n;
        int total=0;

        Scanner input=new Scanner(System.in);

        do {
            System.out.print("Sayı giriniz: ");
            n= input.nextInt();
            if (n %4 ==0){
                total+= n;
            }

            //tek bir sayı girilene kadar n%2==1 olması gerekiyor ancak böyle yapınca çift sayıda program sonlanıyor
        } while (n %2==0);
            System.out.print("toplam: "+total);
        }
    }
